# Real-time Trading System - Environment Variables
# Copy this file to .env and fill in your actual credentials
# IMPORTANT: Never commit .env file to git!

# ============================================================
# Korea Investment & Securities (KIS) API
# ============================================================
# Get credentials from: https://apiportal.koreainvestment.com
KIS_APP_KEY=your_kis_app_key_here
KIS_APP_SECRET=your_kis_app_secret_here
KIS_ACCOUNT_NO=your_account_number_here

# KIS API Environment (real or virtual for paper trading)
# virtual = paper trading, real = live trading
KIS_ENVIRONMENT=virtual

# ============================================================
# Interactive Brokers (IB) API
# ============================================================
# TWS or IB Gateway must be running
IB_HOST=127.0.0.1
IB_PORT=7497  # 7497 = paper trading, 7496 = live trading
IB_CLIENT_ID=1

# ============================================================
# Claude AI API (Anthropic)
# ============================================================
# Get API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================
# Trading Mode
# ============================================================
# paper = paper trading (simulated), live = real money trading
# ALWAYS start with paper mode!
TRADING_MODE=paper

# ============================================================
# Logging
# ============================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/trading.log

# ============================================================
# Alerts (Optional)
# ============================================================
# Slack Webhook URL for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_ENABLED=false

# Email alerts (optional)
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_TO=your_email@gmail.com

# ============================================================
# Database (Optional - for trade history)
# ============================================================
DB_TYPE=sqlite  # sqlite, postgresql, mysql
DB_PATH=logs/trading.db  # for sqlite
# For PostgreSQL/MySQL, use:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=trading_db
# DB_USER=trading_user
# DB_PASSWORD=your_db_password

# ============================================================
# Development Settings
# ============================================================
DEBUG_MODE=false
ENABLE_BACKTESTING=true
PAPER_TRADING_INITIAL_CASH=100000  # USD
