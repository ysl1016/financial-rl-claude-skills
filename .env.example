# Financial RL Trading - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git - it's already in .gitignore

# ============================================================================
# REQUIRED: Anthropic Claude API Key
# ============================================================================
# Get your API key from: https://console.anthropic.com/
# IMPORTANT: Replace 'your-api-key-here' with your actual API key
ANTHROPIC_API_KEY=your-api-key-here

# ============================================================================
# Model Configuration
# ============================================================================
# Path to saved model files
MODEL_PATH=models/default/latest

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# Trading Configuration
# ============================================================================
# Initial capital for trading (in USD)
INITIAL_CAPITAL=100000

# Trading cost as a fraction (0.0005 = 0.05% = 5 basis points)
TRADING_COST=0.0005

# Slippage as a fraction (0.0001 = 0.01% = 1 basis point)
SLIPPAGE=0.0001

# Annual risk-free rate (0.02 = 2%)
RISK_FREE_RATE=0.02

# ============================================================================
# Claude Integration Settings
# ============================================================================
# Claude model to use
# Options: claude-3-7-sonnet-20250219 (latest Sonnet 3.7, recommended, balanced)
#          claude-sonnet-4-20250514 (Sonnet 4, most capable)
#          claude-3-opus-20240229 (Opus, most capable but expensive)
#          claude-3-haiku-20240307 (Haiku, fastest, cheapest)
CLAUDE_MODEL=claude-3-7-sonnet-20250219

# Maximum tokens per Claude response
CLAUDE_MAX_TOKENS=2048

# Temperature for Claude responses (0.0-1.0)
# Lower = more focused, Higher = more creative
CLAUDE_TEMPERATURE=0.7

# How often to consult Claude (in steps)
# Lower = more frequent (more accurate, more expensive)
# Higher = less frequent (cheaper, less accurate)
CLAUDE_CONSULTATION_FREQUENCY=20

# ============================================================================
# API Server Configuration (Optional)
# ============================================================================
# Host for API server
API_HOST=0.0.0.0

# Port for API server
API_PORT=8000

# API key for authentication (change this in production!)
API_KEY=your-secret-api-key-here

# ============================================================================
# Optimization Settings
# ============================================================================
# Optimization level: low, medium, high
OPTIMIZATION_LEVEL=medium

# Device: cuda (GPU) or cpu
# Use 'cuda' if you have an NVIDIA GPU with CUDA installed
# Use 'cpu' otherwise
DEVICE=cuda

# ============================================================================
# Data Settings
# ============================================================================
# Default stock symbol for testing
DEFAULT_SYMBOL=SPY

# Default start date for data (YYYY-MM-DD)
DEFAULT_START_DATE=2020-01-01

# ============================================================================
# Optional: Advanced Settings
# ============================================================================

# Hyperparameter Optimization
# BAYESIAN_OPTIMIZATION_ITERATIONS=30
# VALIDATION_METHOD=expanding

# Risk Management
# MAX_POSITION_SIZE=1.0
# STOP_LOSS_PCT=0.02
# MAX_DRAWDOWN_LIMIT=0.15

# Monitoring
# ENABLE_TENSORBOARD=true
# ENABLE_PROMETHEUS=false
# ENABLE_GRAFANA=false

# ============================================================================
# Development vs Production
# ============================================================================
# Environment: development, staging, production
# ENVIRONMENT=development

# Debug mode (true/false)
# DEBUG=false

# Enable verbose logging (true/false)
# VERBOSE=false
